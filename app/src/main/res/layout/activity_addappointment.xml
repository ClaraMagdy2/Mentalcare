<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addappointment">
    <!-- res/layout/activity_make_appointment.xml -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/nn">

        <!-- Patient Name -->

        <!-- Doctor Name -->
        <TextView
            android:id="@+id/textViewDoctorNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:layout_below="@+id/editTextAge"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/editTextDoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDoctorNameLabel"
            android:layout_marginTop="8dp"
            android:hint="Enter doctor name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>

        <!-- Appointment Date -->
        <TextView
            android:id="@+id/textViewAppointmentDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Date"
            android:layout_below="@+id/editTextDoctorName"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>

        <DatePicker
            android:id="@+id/datePickerAppointmentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAppointmentDateLabel"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>

        <!-- Button to Make Appointment -->
        <Button
            android:id="@+id/buttonMakeAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePickerAppointmentDate"
            android:layout_marginTop="16dp"
            android:text="Add Appointment"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>